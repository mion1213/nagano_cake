<div class="container">
  <div class="row">
    <div class="col">
      <h1>カート内</h1>
      <%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete, data: { confirm: "カートを空にしますか？" }, class: "btn btn-danger" %>
      <table class="table table-bordered table-inverse">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= cart_item.item.with_tax_price %>
            </td>
            <td>
              <%= cart_item.amount %>
            </td>
            <td>
              <%= cart_item.subtotal %>
            </td>
            <td>
              <%= link_to '削除する', cart_item, method: :delete, data: { confirm: '商品をカートから削除しますか？' }, class: "btn btn-danger" %>
            </td>
            <!--@total定義まだ-->
              <% @total += cart_item.subtotal %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to '買い物を続ける', items_path, class: "btn btn-primary" %>
    </div>
    <div class="col">
      
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to '情報入力に進む', items_path, class: "btn btn-success" %>
    </div>
  </div>
</div>