<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-5 px-5 mx-auto">
      <h2>会員情報編集</h2>
      <%= form_with model: [:public,@customer], url: public_customers_profile_path do |f| %>
      <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :last_name, autofocus: true, id: "last_name", class: "form-control" %>
          <%= f.text_field :first_name, autofocus: true, id: "first_name", class: "form-control" %>
      </div>
      <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :last_name_kana, autofocus: true, id: "last_name_kana", class: "form-control" %>
          <%= f.text_field :first_name_kana, autofocus: true, id: "first_name_kana", class: "form-control" %>
      </div>
      <div class="mb-3">
          <%= f.label :postal_code, class: "form-label" %>
          <%= f.text_field :postal_code, autofocus: true, id: "postal_code", class: "form-control" %>
      </div>
      <div class="mb-3">
          <%= f.label :address, class: "form-label" %>
          <%= f.text_field :address, autofocus: true, id: "address", class: "form-control" %>
      </div>
      <div class="mb-3">
          <%= f.label :telephone_number, class: "form-label" %>
          <%= f.text_field :telephone_number, autofocus: true, id: "telephone_number", class: "form-control" %>
      </div>
      <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.text_field :email, autofocus: true, id: "email", class: "form-control" %>
      </div>
      <div class="field">
        <div class="actions">
          <input type="submit" class="btn btn-secondary" role="button" value="編集内容を保存">
        </div>
        <%= link_to "退会する", public_customers_profile_check_path(@customer) %>
      </div>
      <% end %>
    </div>
  </div>
</div>