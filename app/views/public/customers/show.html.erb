<div class="container">
  <div class="row">
    <div class="col">
      <h2>登録情報</h2>
      <%= link_to "編集する", public_customers_profile_edit_path(@customer) %>
      <table class="table table-bordered table-inverse">
        <thead></thead>
        <tbody>
          <tr>
            <td>氏名</td>
            <td>
              <%= @customer.last_name %> <%= @customer.first_name %>
            </td>
          </tr>
          <tr>
            <td>カナ</td>
            <td>
              <%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
            </td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td>
              <%= @customer.postal_code %>
            </td>
          </tr>
          <tr>
            <td>住所</td>
            <td>
              <%= @customer.address %>
            </td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td>
              <%= @customer.telephone_number %>
            </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="col">
        <%= link_to '配送先', addresses_path, class: 'btn btn-info' %>
        <%= link_to '注文履歴', orders_path, class: 'btn btn-info' %>
    </div>
  </div>
</div>