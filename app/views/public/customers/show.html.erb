<div class="container">
  <h3><strong>マイページ</strong></h3>
  <div class="row">
    <div class="col">
      <table class="table table-borderless">
        <tr>
          <th style="width: 10%"><h5><strong>登録情報</strong></h5></th>
          <td>
            <%= link_to '編集する', public_customers_profile_edit_path(@customer), class: 'btn btn-success' %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered table-inverse">
        <thead></thead>
        <tbody>
          <tr>
            <td class="table-secondary" style="width: 30%">氏名</td>
            <td>
              <%= @customer.full_name %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">カナ</td>
            <td>
              <%= @customer.full_name_kana %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">郵便番号</td>
            <td>
              <%= @customer.postal_code %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">住所</td>
            <td>
              <%= @customer.address %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">電話番号</td>
            <td>
              <%= @customer.telephone_number %>
            </td>
          </tr>
          <tr>
            <td class="table-secondary">メールアドレス</td>
            <td>
              <%= @customer.email %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-borderless">
        <tr>
          <th style="width: 10%">配送先</th>
          <td>
            <%= link_to '一覧を見る', addresses_path, class: 'btn btn-info' %>
          </td>
        </tr>
        <tr>
          <th style="width: 10%">注文履歴</th>
          <td>
            <%= link_to '一覧を見る', orders_path, class: 'btn btn-info' %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>