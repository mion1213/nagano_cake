<div class="container">
  <h3><strong>商品一覧</strong>（全<%= @items.where('created_at').count %>件）</h3>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3">
        <div class="card mb-3">
          <%= link_to item_path(item), class: "card-link" do %>
            <%= image_tag item.get_image(300, 200), class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= item.name %></h5>
              <p class="card-text">￥<%= item.price %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>