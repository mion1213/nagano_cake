<div class="container">
  <h3><strong>新規会員登録</strong></h3>
  <div class="row">
    <div class="col-12">
      <%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
      <table class="table table-borderless">
        <tr>
          <td style="width: 20%"><strong><%= f.label :name, class: "form-label" %></strong></td>
          <td class="text-right" style="width: 2%">(姓)</td>
          <td style="width: 35%">
            <%= f.text_field :last_name, autofocus: true, id: "last_name", class: "form-control", style: "width:80%"  %>
          </td>
          <td class="text-right" style="width: 8%">(名)</td>
          <td style="width: 35%">
            <%= f.text_field :first_name, autofocus: true, id: "first_name", class: "form-control", style: "width:80%"  %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :name_kana, class: "form-label" %></strong></td>
          <td class="text-right">(セイ)</td>
          <td>
            <%= f.text_field :last_name_kana, autofocus: true, id: "last_name_kana", class: "form-control", style: "width:80%"  %>
          </td>
          <td class="text-right">(メイ)</td>
          <td>
            <%= f.text_field :first_name_kana, autofocus: true, id: "first_name_kana", class: "form-control", style: "width:80%"  %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :email, class: "form-label" %></strong></td>
          <td></td>
          <td>
            <%= f.text_field :email, autofocus: true, id: "email", class: "form-control", style: "width:80%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :postal_code, class: "form-label" %></strong></td>
          <td></td>
          <td>
            <%= f.text_field :postal_code, autofocus: true, id: "postal_code", class: "form-control", style: "width:80%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :address, class: "form-label" %></strong></td>
          <td></td>
          <td>
            <%= f.text_field :address, autofocus: true, id: "address", class: "form-control", style: "width:215%"  %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :telephone_number, class: "form-label" %></strong></td>
          <td></td>
          <td>
            <%= f.text_field :telephone_number, autofocus: true, id: "telephone_number", class: "form-control", style: "width:80%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :password, class: "form-label" %></strong></td>
          <td></td>
          <td>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "width:80%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :password_confirmation, class: "form-label" %></strong></td>
          <td></td>
          <td>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "width:80%" %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <h3><strong>既に登録済みの方</strong></h3>
      <span>
        <%= link_to "こちら", new_customer_session_path %> からログインしてください。
      </span>
    </div>
  </div>
</div>