<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <!--ラベル名や記述方法の変更必須-->
  
  <div class="field">
    <%= f.label :name %>
    <span>(姓)</span><%= f.text_field :last_name %>
    <span>(名)</span><%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :name_kana %>
    <span>(セイ)</span><%= f.text_field :last_name_kana %>
    <span>(メイ)</span><%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>
  
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
