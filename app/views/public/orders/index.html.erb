<div class="container">
  <h3><strong>注文履歴一覧</strong></h3>
  <div class="row">
    <div class="col">
      <table class="table table-bordered table-inverse">
        <thead>
          <tr class="table-secondary">
            <th style="width: 5%">注文日</th>
            <th style="width: 40%">配送先</th>
            <th style="width: 20%">注文商品</th>
            <th style="width: 10%">支払金額</th>
            <th style="width: 12%">ステータス</th>
            <th style="width: 13%">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= order.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td>
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td>
              <%= order.billing_amount %>円
            </td>
            <td>
              <%= order.status_i18n %>
            </td>
            <td style="text-align: center">
              <%= link_to '表示する', order_path(order.id), class: "btn btn-info" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>