<div class="container p-3">
  <div class="row">
    <div class="col-md-12">

      <h3>注文情報入力</h3>
      <%= form_with model: @order, url: confirm_orders_path, method: :post, local: true do |f|  %>

      <h4>支払い方法</h4>
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
        <br>
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>

      <div>
        <h4>お届け先</h4>
        <%= f.radio_button :select_address, 0 %>
        <%= f.label :select_address, Order.select_addresses_i18n[:current_customer_address] %><br>
        <span>〒<%= current_customer.postal_code %> <%= current_customer.address %></span><br>
        <span><%= current_customer.last_name %><%= current_customer.first_name %></span><br>
      
        <%= f.radio_button :select_address, 1 %>
        <%= f.label :select_address, Order.select_addresses_i18n[:addresses] %><br>
        <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
        <br>
      
        <%= f.radio_button :select_address, 2 %>
        <%= f.label :select_address, Order.select_addresses_i18n[:new_address] %>
      
        <%= f.fields_for :address do |address_form| %>
          <h4>郵便番号(ハイフンなし)</h4>
          <%= address_form.text_field :postal_code %>
          <h4>住所</h4>
          <%= address_form.text_field :address %>
          <h4>宛名</h4>
          <%= address_form.text_field :name %>
        <% end %>
      </div>
        <%= f.submit "確認画面へ進む", class: "btn btn-info" %>
      <% end %>
    </div>
  </div>
</div>