<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      <table>
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= order.created_at %>
            </td>
            <td>
              <%= order.customer.name %>
            </td>
            <td>
              <%= order.order_detail.quantity %>
            </td>
            <td>
              <%= order.status %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>    