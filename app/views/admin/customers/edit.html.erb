<div class="container">
  <h3><strong><%= @customer.full_name %>さんの会員情報編集</strong></h3>
  <div class="row mt-3">
    <div class="col-10">
      <%= form_with(model: @customer, url:admin_customer_path(@customer), local: true ,method: :patch) do |f| %>
      <table class="table table-borderless">
        <tr>
          <td style="width: 30%"><strong><%= f.label :name, class: "form-label" %></strong></td>
          <td class="d-flex">
            <%= f.text_field :last_name, autofocus: true, id: "last_name", class: "form-control mr-2", style: "width:40%" %>
            <%= f.text_field :first_name, autofocus: true, id: "first_name", class: "form-control", style: "width:40%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :name_kana, class: "form-label" %></strong></td>
          <td class="d-flex">
            <%= f.text_field :last_name_kana, autofocus: true, id: "last_name_kana", class: "form-control mr-2", style: "width:40%" %>
            <%= f.text_field :first_name_kana, autofocus: true, id: "first_name_kana", class: "form-control", style: "width:40%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :postal_code, class: "form-label" %></strong></td>
          <td>
            <%= f.text_field :postal_code, autofocus: true, id: "postal_code", class: "form-control", style: "width:40%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :address, class: "form-label" %></strong></td>
          <td>
            <%= f.text_field :address, autofocus: true, id: "address", class: "form-control" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :telephone_number, class: "form-label" %></strong></td>
          <td>
            <%= f.text_field :telephone_number, autofocus: true, id: "telephone_number", class: "form-control", style: "width:40%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :email, class: "form-label" %></strong></td>
          <td>
            <%= f.text_field :email, autofocus: true, id: "email", class: "form-control", style: "width:40%" %>
          </td>
        </tr>
        <tr>
          <td><strong><%= f.label :is_deleted, class: "form-label" %></strong></td>
          <td>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>