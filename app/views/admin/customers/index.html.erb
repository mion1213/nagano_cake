<div class="container">
  <h3><strong>会員一覧</strong></h3>
  <div class="row">
    <div class="col">
      <table class="table table-inverse">
        <thead class="table-secondary">
          <tr>
            <th style="width: 10%">会員ID</th>
            <th style="width: 30%">氏名</th>
            <th style="width: 30%">メールアドレス</th>
            <th style="width: 30%">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to admin_customer_path(customer.id), class: "text-dark text-decoration-underline" do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.status == "有効" %>
                <span class="text-success"><strong><%= customer.status %></strong></span>
              <% else %>
                <span class="text-black-50"><strong><%= customer.status %></strong></span>
              <% end %>
            </td>
          </tr>
          <% end %>
          <%= paginate @customers %>
        </tbody>
      </table>
    </div>
  </div>
</div>