<div class="container">
  <h3><strong>ジャンル一覧・追加</strong></h3>
  <div class="row mb-5">
    <div class="col-8">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, local: true do |f| %>
      <table class="table table-borderless">
        <tr>
          <td><strong><%= f.label :name, class: "form-label" %></strong></td>
          <td class="d-flex justify-content-end">
            <%= f.text_field :name, autofocus: true, id: "name", class: "form-control", style: "width:60%" %>
            <%= f.submit "新規登録", class: "btn btn-success ml-auto" %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-4">
      <table class="table table-inverse">
        <thead>
          <tr class="table-secondary text-center">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= genre.name %>
            </td>
            <td class="d-flex justify-content-end">
              <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success ml-auto" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>