<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/a5b17d123b.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <span>ながのcake</span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            
            <!--会員ログイン時ヘッダー-->
            
            <% if customer_signed_in? %>
            <li class="nav-item">
              <%= link_to public_customers_profile_path, class: 'nav-link text-dark' do %>
                <span>マイページ</span>
              <% end %>
            </li>
            <!--商品一覧-->
            <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-dark' do %>
                <span>商品一覧</span>
              <% end %>
            </li>
            <!--カート内-->
            <li class="nav-item">
              <%= link_to cart_items_path, class: 'nav-link text-dark' do %>
                <span>カート</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <span>ログアウト</span>
              <% end %>
            </li>
            
            <!--管理者ログイン時ヘッダー-->
            <% elsif admin_signed_in? %>
            <!--商品一覧-->
            <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-dark' do %>
                <span>商品一覧</span>
              <% end %>
            </li>
            <!--会員一覧-->
            <li class="nav-item">
              <%= link_to admin_customers_path, class: 'nav-link text-dark' do %>
                <span>会員一覧</span>
              <% end %>
            </li>
            <!--注文履歴一覧-->
            <li class="nav-item">
              <%= link_to admin_root_path, class: 'nav-link text-dark' do %>
                <span>注文履歴一覧</span>
              <% end %>
            </li>
            <!--ジャンル一覧-->
            <li class="nav-item">
              <%= link_to admin_genres_path, class: 'nav-link text-dark' do %>
                <span>ジャンル一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
                <span>ログアウト</span>
              <% end %>
            </li>
            <!--非ログイン時-->
            <% else %>
            <li class="nav-item">
              <%= link_to about_path, class: 'nav-link text-dark' do %>
                <span>About</span>
              <% end %>
            </li>
            <!--商品一覧-->
            <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-dark' do %>
                <span>商品一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_customer_registration_path, class: 'nav-link text-dark' do %>
                <span>新規登録</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_customer_session_path, class: 'nav-link text-dark' do %>
                <span>ログイン</span>
              <% end %>
            </li>
            <% end %>
            
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row justify-content-center">
          <div class="max-auto">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>